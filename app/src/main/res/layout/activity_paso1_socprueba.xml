<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Paso1SOCPrueba_Activity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con título indicando que es versión de prueba -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 PASO 1 SOC - PRUEBA API"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/gradient_background"/>

        <!-- Sección para escanear VIN -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 Escanear VIN"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etVIN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="VIN del vehículo (17 caracteres)"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnConsultarVehiculo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔍 Consultar Vehículo"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Información del Vehículo (oculto por defecto) -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBlVehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BL: "
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvMarcaModeloAnnio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Marca - Modelo, Año"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvColorExterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color Ext.: "
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvColorInterior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color Int.: "
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Datos SOC (oculto por defecto) -->
        <LinearLayout
            android:id="@+id/layoutSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚡ Datos SOC"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/etOdometro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Odómetro (km)"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/etBateria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Batería (%)"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <CheckBox
                        android:id="@+id/cbModoTransporte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Modo Transporte"
                        android:layout_marginTop="8dp"/>

                    <CheckBox
                        android:id="@+id/cbRequiereRecarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requiere Recarga"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Evidencias Fotográficas (oculto por defecto) -->
        <LinearLayout
            android:id="@+id/layoutEvidencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📷 Evidencias Fotográficas (API)"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Las fotos se subirán a la API"
                        android:textSize="12sp"
                        android:textColor="@android:color/holo_orange_dark"
                        android:layout_marginTop="4dp"/>

                    <!-- Evidencia 1 -->
                    <LinearLayout
                        android:id="@+id/layoutEvidencia1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btnEvidencia1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📷 Foto 1"/>

                        <TextView
                            android:id="@+id/tvEstadoEvidencia1"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="❌"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <!-- Evidencia 2 -->
                    <LinearLayout
                        android:id="@+id/layoutEvidencia2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/btnEvidencia2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📷 Foto 2"/>

                        <TextView
                            android:id="@+id/tvEstadoEvidencia2"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="❌"
                            android:textSize="24sp"
                            android:gravity="center"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Botón Guardar (oculto por defecto) -->
        <Button
            android:id="@+id/btnGuardarSOC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="💾 GUARDAR Y SUBIR A API"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:backgroundTint="@android:color/holo_green_dark"/>

        <!-- Indicador de carga (oculto por defecto) -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@android:color/white">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"/>

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subiendo fotos..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvLoadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por favor espere"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>