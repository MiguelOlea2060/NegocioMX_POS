<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">
    <!-- Paso1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOC - State of Charge"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sección VIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚗 Información del Vehículo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etVIN"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Ingrese VIN del vehículo"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEscanearVIN"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="📷"
                    android:textSize="16sp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/btnConsultarVehiculo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="🔍 Consultar Vehículo"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Información del Vehículo -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Datos del Vehículo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMarcaModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca y Modelo: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Año: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placa: -"
                android:textSize="16sp"
                android:textColor="#424242" />

        </LinearLayout>

        <!-- Sección SOC -->
        <LinearLayout
            android:id="@+id/layoutSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ State of Charge (SOC)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="16dp" />

            <!-- Odómetro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛣️ Odómetro (km)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etOdometro"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ingrese kilometraje actual"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Batería -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔋 Nivel de Batería (%)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etBateria"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Ingrese porcentaje de batería (0-100)"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Checkboxes -->
            <CheckBox
                android:id="@+id/cbModoTransporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚛 Modo Transporte Activo"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/cbRequiereRecarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚡ Requiere Recarga Inmediata"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Sección Evidencias -->
        <LinearLayout
            android:id="@+id/layoutEvidencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📸 Evidencias Fotográficas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:layout_marginBottom="16dp" />

            <!-- Evidencia 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnEvidencia1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="📷 Capturar Evidencia 1"
                    android:backgroundTint="#9C27B0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEstadoEvidencia1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="❌"
                    android:textSize="24sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Evidencia 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnEvidencia2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="📷 Capturar Evidencia 2"
                    android:backgroundTint="#9C27B0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEstadoEvidencia2"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="❌"
                    android:textSize="24sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarSOC"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="💾 GUARDAR SOC"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
