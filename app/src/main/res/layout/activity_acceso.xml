<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_gradient_background"
    tools:context=".acceso_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp">

            <ImageView
                android:id="@+id/imgLogoEmpresa"
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:src="@drawable/softsystem_logo_500"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="180dp"
                android:src="@drawable/transvision_logo_chico250px"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Welcome Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_blue"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inicia sesión para continuar"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/deep_blue"
                    app:hintTextColor="@color/deep_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtUsuarioEmailAcceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email del usuario"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/deep_blue"
                    app:hintTextColor="@color/deep_blue"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtContrasenaAcceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="12dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Remember Access Checkbox -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <CheckBox
                        android:id="@+id/chkRecordarAcceso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/deep_blue" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recordar Acceso"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIngresarAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="INGRESAR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/deep_blue"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="24dp"
                    app:icon="@drawable/ic_login"
                    app:iconGravity="textStart" />

                <!-- Register Link -->
                <TextView
                    android:id="@+id/lblRegistrarUsuarioAcceso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registarse"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_blue"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Footer Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>
