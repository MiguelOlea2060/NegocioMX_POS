<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".ConsultaPaso1Soc_Activity">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 Consulta Paso 1 SOC"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        android:background="@color/naranja_ligero"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Sección de Filtros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Seleccionar Fecha"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="12dp" />

        <!-- Sección compacta de fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvFechaSeleccionada"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hoy"
                android:textSize="16sp"
                android:textColor="#424242"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@android:drawable/ic_menu_today"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="true" />


            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:text="🔍 Consultar"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Calendar inicialmente oculto -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Estadísticas -->
    <LinearLayout
        android:id="@+id/layoutEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/info_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTotalRegistros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📋 0 registros"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvVehiculosUnicos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🚗 0 vehículos"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalFotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📸 0 fotos"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="center" />

    </LinearLayout>

    <!-- Loading -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminateTint="#2196F3" />

        <TextView
            android:id="@+id/tvLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Consultando registros..."
            android:textSize="16sp"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/tvLoadingSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Filtrando por fecha seleccionada"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <!-- Lista de Resultados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRegistros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp"
        tools:listitem="@layout/item_consulta_paso1_soc" />

    <!-- Mensaje Sin Resultados -->
    <LinearLayout
        android:id="@+id/layoutSinResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📭"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se encontraron registros"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMensajeSinResultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="para la fecha seleccionada"
            android:textSize="14sp"
            android:textColor="#999999" />

    </LinearLayout>

</LinearLayout>
