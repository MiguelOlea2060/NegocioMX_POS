<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usuarios_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgUsuarioAdmin"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:srcCompat="@drawable/usuarios_icono_64x64" />

        <TextView
            android:id="@+id/lblEncabezadoUsuarioAdmin"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="Usuario" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/btnRegresarUsuarioAdmin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/regresar_icono_64x64" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/btnNuevoUsuarioAdmin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/agregar_icono_64x64" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/btnGuardarUsuarioAlta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/save_14949" />

        <ProgressBar
            android:id="@+id/progressAltaUsuarioAdmin"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="55dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llExpandableContentUsuarioAdmin"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:drawableLeft="@drawable/baseline_person_24"
                android:hint="Nombre Completo"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:drawablePadding="5dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"

                android:id="@+id/txtNombreCompletoUsuarioUsuarios"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="250"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:layout_marginLeft="2dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"
                android:id="@+id/txtEmailUsuarioUsuarioAdmin"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="150"
                android:inputType="textEmailAddress"
                android:text=""
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="7dp"
                android:text="Contraseña:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint="Contraseña"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:layout_marginLeft="2dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"
                android:id="@+id/txtContrasenaUsuarioAdmin"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:maxLength="30"
                android:inputType="textPassword"
                android:text=""
                android:tooltipText="Rfc de Cliente"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="7dp"
                android:text="Repetir Contraseña:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:hint="Contraseña"
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:background="@drawable/ed_shape"
                android:layout_marginLeft="2dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"
                android:id="@+id/txtRepetirContrasenaUsuarioAdmin"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:maxLength="30"
                android:inputType="textPassword"
                android:text=""
                android:tooltipText="Contraseña"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:id="@+id/lblRolUsuarioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Rol: " />

            <Spinner
                android:textColor="@color/deep_blue"
                android:textColorHint="@color/deep_blue"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:layout_height="38dp"
                android:id="@+id/cmbRolUsuarioUsuarioAdmin"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:ems="10"
                android:maxLength="13"
                android:inputType="text"
                android:layout_width="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chkActivoUsuarioAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:text="Activo" />

            <CheckBox
                android:id="@+id/chkCuentaVerificadaUsuarioAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:text="Cuenta verificada" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblListaUsuarioAdmin"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:background="@color/black"
            android:textColor="@color/blancoprincipal"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="Lista de Usuarios" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUsuarioAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>