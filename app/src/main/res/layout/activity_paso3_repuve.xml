<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        T√≠tulo
        <TextView
            android:padding="3dp"
            android:background="@color/doradoprincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Paso 3 - Repuve "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/azulprincipal"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        Secci√≥n VIN
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="üöó Escanea el Codigo QR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/azulprincipal"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:maxLength="19"
                    android:id="@+id/etVIN"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:textColor="@color/azulprincipal"
                    android:hint="Ingrese VIN del veh√≠culo"
                    android:background="@drawable/edittext_background"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_weight="2"
                    android:id="@+id/btnConsultarVehiculo"
                    android:layout_width="85dp"
                    android:layout_height="48dp"
                    android:text=" üîç "
                    android:backgroundTint="@color/azulprincipal"
                    android:textColor="@color/blancoprincipal"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        Informaci√≥n del Veh√≠culo
        <LinearLayout
            android:id="@+id/layoutInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="üìã Datos del Veh√≠culo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/azulprincipal"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBlVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBL: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMarcaModeloAnnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca y Modelo: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorExterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Ext: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorInterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Int.: -"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvTipoCombustible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Combustible: -"
                android:textSize="16sp"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/tvTipoVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo vehiculo: -"
                android:textSize="16sp"
                android:textColor="#424242" />

        </LinearLayout>

        Secci√≥n Evidencia REPUVE (1 sola foto)
        <LinearLayout
            android:id="@+id/layoutEvidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="üì∏ Evidencia Repuve"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/azulprincipal"
                android:layout_marginBottom="16dp" />


            Bot√≥n de evidencia
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnEvidencia"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="üì∑ Foto Repuve"
                    android:backgroundTint="@color/azulprincipal"
                    android:textColor="@color/blancoprincipal"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvEstadoEvidencia"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="‚ùå"
                    android:textSize="24sp"
                    android:gravity="center" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvMensajeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="‚ÑπÔ∏è Esta foto es obligatoria y solo se puede tomar una vez"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="8dp"
                android:background="#F0F0F0" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="@color/azulprincipal" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Preparando datos..."
                android:textSize="16sp"
                android:textColor="@color/azulprincipal" />

            <TextView
                android:id="@+id/tvLoadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Esto puede tomar unos momentos"
                android:textSize="12sp"
                android:textColor="@color/azulprincipal" />

        </LinearLayout>

        Bot√≥n Guardar
        <Button
            android:id="@+id/btnGuardarPaso3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="üíæ GUARDAR "
            android:backgroundTint="@color/azulprincipal"
            android:textColor="@color/blancoprincipal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
             />





    </LinearLayout>

</ScrollView>