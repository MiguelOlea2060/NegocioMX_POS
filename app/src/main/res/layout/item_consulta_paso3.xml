<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        Header con VIN y BL
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvVIN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIN: XXXXXXXXXXXXX"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BL: XXXX"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:padding="2dp" />

        </LinearLayout>

        Informaci√≥n del Veh√≠culo
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvMarcaModelo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marca Modelo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvAnio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A√±o: 2024"
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

        Colores
        <TextView
            android:id="@+id/tvColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colores -> Ext: Color | Int: Color"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        N√∫mero de Motor
        <TextView
            android:id="@+id/tvNumeroMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de Motor: XXXXXXXXX"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        Datos REPUVE
        <TextView
            android:id="@+id/tvDatosSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REPUVE: ‚úÖ Foto registrada | Archivo: foto.jpg"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:background="@drawable/info_background"
            android:padding="6dp"
            android:layout_marginBottom="8dp" />

        Footer con fotos y fecha
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="üì∏ 0 foto(s)"
                android:textSize="12sp"
                android:textColor="@color/blancoprincipal"
                android:background="@color/azulprincipal"
                android:padding="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01 12:00:00"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>