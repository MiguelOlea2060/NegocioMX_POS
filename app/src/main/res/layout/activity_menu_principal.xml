<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".menu_principal_activity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgFotoEncabezado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logomexproud" />

        <!-- NUEVO: Contenedor de notificaciones -->
        <FrameLayout
            android:id="@+id/frameNotificaciones"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/imgNotificaciones"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_popup_reminder"
                android:contentDescription="Notificaciones"
                app:tint="@color/deep_blue" />

            <TextView
                android:id="@+id/tvBadgeNotificaciones"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:background="@drawable/notification_badge_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAltaArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Articulo" />

        <Button
            android:id="@+id/btnConsultaArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Consulta Articulo" />

        <Button
            android:layout_marginRight="15dp"
            android:id="@+id/btnCliente"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnUM"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uni. de Medida" />

        <Button
            android:layout_gravity="right"
            android:id="@+id/btnCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria" />

        <Button
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:id="@+id/btnImpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impuesto" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTipoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo pago" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuarios" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSincronizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sincronización" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresas" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnConfiguraciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configs" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnRadminVPN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radmin VPN" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ventas" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btnVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehículo" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnAdminUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Usuarios" />
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnCargaMasivaXls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carga de VINs" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@color/doradoprincipal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/azulprincipal"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Opciones"
            android:textSize="22dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_gravity="top"
            android:id="@+id/imgLoginLogoutMenuPrincipal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/logout_icono_64x64" />

    </LinearLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulprincipal"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso1SOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 1 - Soc"
            android:backgroundTint="@color/azulprincipal"
            />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta"
            android:backgroundTint="@color/azulprincipal"
            />

    </LinearLayout>

    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulprincipal"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso2Accesorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 2 - Accesorios"
            android:backgroundTint="@color/azulprincipal"
            />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta"
            android:backgroundTint="@color/azulprincipal"
            />

    </LinearLayout>

    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulprincipal"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>



    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso3Repuve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 3 - Repuve"
            android:backgroundTint="@color/azulprincipal"
            />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta"
            android:backgroundTint="@color/azulprincipal"
            />
       

    </LinearLayout>



    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulprincipal"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>





    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso4Fotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 4 - Llantas"
            android:backgroundTint="@color/azulprincipal"
            />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta"
            android:backgroundTint="@color/azulprincipal"
            />

    </LinearLayout>



    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/azulprincipal"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnPasoResumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen"
            android:backgroundTint="@color/azulprincipal"
            />

    </LinearLayout>









</LinearLayout>