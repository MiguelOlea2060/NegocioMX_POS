<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con VIN y BL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvVIN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIN: XXXXXXXXXXXXX"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

            <TextView
                android:id="@+id/tvBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BL: XXXX"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/edittext_background"
                android:padding="4dp" />

        </LinearLayout>

        <!-- InformaciÃ³n del VehÃ­culo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvMarcaModelo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marca Modelo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242" />

            <TextView
                android:id="@+id/tvAnio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AÃ±o: 2024"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Colores -->
        <TextView
            android:id="@+id/tvColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ext: Color | Int: Color"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- NÃºmero de Motor -->
        <TextView
            android:id="@+id/tvNumeroMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motor: XXXXXXXXX"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Datos SOC -->
        <TextView
            android:id="@+id/tvDatosSOC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OdÃ³metro: 0 km | BaterÃ­a: 0% | Transporte: No | Recarga: No"
            android:textSize="11sp"
            android:textColor="#FF6F00"
            android:background="#FFF3E0"
            android:padding="6dp"
            android:layout_marginBottom="8dp" />

        <!-- Footer con fotos y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¸ 0 foto(s)"
                android:textSize="11sp"
                android:textColor="#9C27B0"
                android:background="#F3E5F5"
                android:padding="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01 12:00:00"
                android:textSize="10sp"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
